    <!--        </LinearLayout>-->

    <TextView
        android:id="@+id/userProfileFollowersTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Followers: "
        android:textColor="@color/white"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="200dp"/>

    <TextView
        android:id="@+id/userProfilePointsTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Points: "
        android:textColor="@color/white"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="200dp"/>

    <Button
        android:id="@+id/userFollowBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="190dp"
        android:backgroundTint="@color/teal_200"
        android:text="Follow"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"/>
    <Button
        android:id="@+id/postMyGymBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="285dp"
        android:layout_marginTop="140dp"
        android:backgroundTint="@color/teal_200"
        android:text="Post myGym"
        android:textColor="@color/white"
        android:textSize="11dp"
        android:layout_alignParentBottom="true"/>

    <EditText
        android:id="@+id/postMyGymEtx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="140dp"
        android:background="@color/transparent_white"
        android:text=""
        android:hint="gym name"
        android:textColor="@color/white"
        android:textColorHint="@color/light_gray"
        android:textSize="12dp"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/workoutPosts"
        layout="@layout/content_scrolling"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:textColor="@color/white" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
