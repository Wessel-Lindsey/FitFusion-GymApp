<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray"
    tools:context=".HomePage">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:background="#30FFFFFF"
        android:text="Welcome to the Home Page"
        android:textAlignment="center"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="35dp" />
    <TextView
        android:id="@+id/backendResponse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Backend Response"
        android:layout_below="@id/jsonreqbtn"
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp"
        android:background="#30FFFFFF"
        tools:layout_editor_absoluteX="32dp"
        android:textAlignment="center"
        tools:layout_editor_absoluteY="35dp" />

    <TextView
        android:id="@+id/helloUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/getAllUsersBtn"
        android:layout_margin="50dp"
        android:layout_marginTop="223dp"
        android:layout_marginBottom="50dp"
        android:background="#30FFFFFF"
        android:text="Hello User"
        android:textAlignment="center"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="35dp" />

    <Button
        android:id="@+id/jsonreqbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/teal_200"
        android:text="JSON REQuest" />
    <Button
        android:id="@+id/loginpagebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/helloUser"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/teal_200"
        android:text="TO Login" />
    <Button
        android:id="@+id/getAllUsersBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/backendResponse"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/teal_200"
        android:text="get all users" />
</RelativeLayout>